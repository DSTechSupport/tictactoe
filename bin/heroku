#!/bin/bash
echo "-> The staging server test is a success <-" #TODO implement deploy to pruduction script
# Install the Heroku gem (or the Heroku toolbelt)
gem install heroku
# Add your Heroku git repo:
git remote add heroku git@heroku.com:pacific-castle-1001.herokuapp.git
# Add your Heroku API key:
export HEROKU_API_KEY=3f1ba4ef-6b1e-4ec6-a0fb-a21cedb7f024
# Turn off warnings about SSH keys:
echo "Host heroku.com" >> ~/.ssh/config
echo "   StrictHostKeyChecking no" >> ~/.ssh/config
echo "   CheckHostIP no" >> ~/.ssh/config
echo "   UserKnownHostsFile=/dev/null" >> ~/.ssh/config
# Clear your current Heroku SSH keys:
heroku keys:clear
# Add a new SSH key to Heroku
heroku | heroku keys:add
# Push to Heroku!
heroku | git push heroku master
